<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colourmemory"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.colourmemory.HomeActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- The gameboard should be displayed in portrait orientation only. -->
        </activity>
        <activity android:name="com.colourmemory.rank.RankActivity" >
            <!--
            The highscores table may bedis played in either land scape or portrait 
            orientation.
            -->
        </activity>
    </application>

</manifest>